@model List<La_Piazzetta.Models.Vendors>

<h2 style="font-family: 'Playfair Display', serif; font-weight: 600">Vendors Report</h2>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Ingredients</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var em in Model)
        {
            <tr>
                <td>@em.Name</td>
                <td>@em.Address</td>
                <td>+40 @em.PhoneNumber</td>
                <td>@string.Join(", ",em.Ingredients.Select(x => x.Name).ToArray())</td>
            </tr>
        }
    </tbody>
</table>
