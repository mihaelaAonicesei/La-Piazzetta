@Styles.Render("~/Content/css")

<div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner carousel-zoom">
        <div class="active item">
            <img class="img-responsive" style="height: 380px; width: 100%;" src="../../images/carusel1.jpg">
            <div class="carousel-caption">
                <h2>La Piazzetta</h2>
                <p>Get the authentic italian pizza at home</p>
            </div>
        </div>
        <div class="item">
            <img class="img-responsive" style="height: 380px; width: 100%;" src="../../images/carr2.jpg">
            <div class="carousel-caption">
                <h2>Best delivery in town</h2>
                <p>If your order is not delivered in 40 minutes you'll get the money back</p>
            </div>
        </div>
        <div class="item">
            <img class="img-responsive" style="height: 380px; width: 100%;" src="../../images/carr3.png">
            <div class="carousel-caption">
                <h2>Season offer</h2>
            </div>
        </div>
    </div>
    <a class="carousel-control left" href="#carousel" data-slide="prev"></a>
    <a class="carousel-control right" href="#carousel" data-slide="next"></a>
</div>
